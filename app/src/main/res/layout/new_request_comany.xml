<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_gas"
        app:layout_constraintBottom_toBottomOf="@+id/image2"
        app:layout_constraintEnd_toStartOf="@+id/image2"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginStart="5dp"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/image2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_gas"
        app:layout_constraintBottom_toBottomOf="@+id/image3"
        app:layout_constraintEnd_toStartOf="@+id/image3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/image1" />

    <ImageView
        android:id="@+id/image3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_gas"
        app:layout_constraintBottom_toBottomOf="@+id/image4"
        app:layout_constraintEnd_toStartOf="@+id/image4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/image2" />

    <ImageView
        android:id="@+id/image4"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_gas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/image3"
        app:layout_constraintTop_toTopOf="parent" />



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image2"
        android:layout_margin="@dimen/margin_8"
        android:elevation="8dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="16dp"

       app:contentPadding="8dp"
        >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
>
           <TextView
               android:id="@+id/txt_service"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Select the service you want"
               android:textColor="@android:color/black"
               android:textSize="20sp"
               android:layout_marginStart="8dp"
               android:layout_marginTop="16dp"/>

           <RadioGroup
               android:layout_width="match_parent"
               android:layout_height="wrap_content"

               android:layout_marginStart="16dp"
               android:layout_marginTop="8dp">
               <RadioButton
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Buy one"
                   android:textColor="@android:color/black"
                   android:textSize="16dp"
                   />
               <RadioButton
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="fill one"
                   android:textColor="@android:color/black"
                   android:textSize="16dp"
                   />
           </RadioGroup>

       </LinearLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>