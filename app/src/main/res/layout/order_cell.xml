<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_8"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<TextView
    android:id="@+id/txt_order"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="to company1"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/txt_review_purchase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/txt_order"
        app:layout_constraintTop_toTopOf="parent"
        android:text="review your purchase"
        android:layout_marginStart="@dimen/margin_5"
        android:textColor="@color/purple_background"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/txt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="12/1/2020" />
</androidx.constraintlayout.widget.ConstraintLayout>