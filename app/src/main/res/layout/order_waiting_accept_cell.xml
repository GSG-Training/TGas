<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_marginTop="@dimen/margin_10"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<TextView
    android:id="@+id/txt_company_order"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="to company1 "
    app:layout_constraintWidth_percent="0.8"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/txt_review_purchase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="review the purchase"
        app:layout_constraintStart_toEndOf="@id/txt_company_order"
        android:layout_marginStart="@dimen/margin_5"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/purple_background"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/txt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="10sp"
        android:text="1/12/2020"
        />
    <ImageView
        android:id="@+id/img_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_date"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_baseline_delete_24"
        android:layout_marginTop="@dimen/margin_8"
        android:layout_marginEnd="@dimen/margin_16"
        />



</androidx.constraintlayout.widget.ConstraintLayout>