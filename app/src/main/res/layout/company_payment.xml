<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/txt_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your balance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/black"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/txt_number_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100.0$"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_balance"
        android:layout_marginTop="8dp"
        android:textColor="@color/purple_background"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/txt_total_paid_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The total amount was withdraw through the app"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/txt_number_balance"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/black"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/txt_number_total_paid_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100.0$"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_total_paid_app"
        android:layout_marginTop="8dp"
        android:textColor="@color/purple_background"
        android:textSize="20sp"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_number_total_paid_app"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardElevation="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="8dp"
        app:contentPadding="8dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/txt_financial_records"
                android:layout_width="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:text="Financial records"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/txt_financial_records"
                app:layout_constraintStart_toStartOf="parent"
                tools:listitem="@layout/company_payment_cell"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>