<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Project_test" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_background</item>
        <item name="colorPrimaryVariant">@color/purple_background</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="radioButtonStyle">@style/radio_button</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="radio_button" parent="Widget.AppCompat.CompoundButton.RadioButton">

        <item name="colorSecondary">@color/yellow_background</item>
        <item name="colorSecondaryVariant">@color/yellow_background</item>
        <item name="android:colorBackground">@color/yellow_background</item>

    </style>

</resources>